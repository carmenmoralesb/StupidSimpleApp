<resources>
  <!-- Base application theme. -->
  <style name="Theme.StupidSimpleApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple</item>
    <item name="colorPrimaryVariant">@color/dark_purple</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/yellow</item>
    <item name="colorSecondaryVariant">@color/dark_yellow</item>
    <item name="colorOnSecondary">@color/white</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
    <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    <item name="colorTertiary">@color/black</item>
  </style>

  <style name="Theme.StupidSimpleApp.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="materialButtonOutlinedStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
    <item name="cornerRadius">@dimen/dp10</item>
    <item name="android:background">@drawable/bg_button</item>
    <item name="android:tint">@color/white</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:paddingTop">@dimen/dp8</item>
    <item name="android:paddingBottom">@dimen/dp8</item>
    <item name="android:paddingStart">@dimen/dp16</item>
    <item name="android:paddingEnd">@dimen/dp16</item>
    <item name="android:textSize">@dimen/sp14</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Divider" parent="Theme.StupidSimpleApp">
    <item name="android:background">@color/gray</item>
  </style>

  <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
  </style>

  <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
    <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
  </style>

  <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopRight">@dimen/dp16</item>
    <item name="cornerSizeTopLeft">@dimen/dp16</item>
    <item name="cornerSizeBottomRight">@dimen/dp0</item>
    <item name="cornerSizeBottomLeft">@dimen/dp0</item>
  </style>

  <style name="Button" parent="Theme.StupidSimpleApp">
    <item name="android:background">@drawable/bg_button</item>
    <item name="android:tint">@color/white</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:paddingTop">@dimen/dp8</item>
    <item name="android:paddingBottom">@dimen/dp8</item>
    <item name="android:paddingStart">@dimen/dp16</item>
    <item name="android:paddingEnd">@dimen/dp16</item>
    <item name="android:textSize">@dimen/sp14</item>
    <item name="android:textStyle">bold</item>
    <item name="android:radius">@dimen/dp8</item>
  </style>

  <style name="Button.Secondary">
    <item name="android:backgroundTint">?attr/colorSecondary</item>
  </style>

  <style name="Text" parent="Theme.StupidSimpleApp">
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="Text.Regular">
    <item name="android:textStyle">normal</item>
    <item name="fontFamily">@font/lato_regular</item>
  </style>

  <style name="Text.Bold">
    <item name="android:textStyle">bold</item>
    <item name="fontFamily">@font/lato_bold</item>
  </style>

  <style name="Text.Regular.Body1">
    <item name="android:textSize">@dimen/sp16</item>
    <item name="fontFamily">@font/lato_regular</item>
  </style>

  <style name="Text.Bold.Body1">
    <item name="android:textSize">@dimen/sp16</item>
    <item name="fontFamily">@font/lato_bold</item>
  </style>

  <style name="Text.Regular.Body2">
    <item name="android:textSize">@dimen/sp14</item>
    <item name="fontFamily">@font/lato_regular</item>
  </style>

  <style name="Text.Bold.Body2">
    <item name="android:textSize">@dimen/sp14</item>
    <item name="fontFamily">@font/lato_bold</item>
  </style>

  <style name="Text.Bold.Headline">
    <item name="android:textSize">@dimen/dp24</item>
    <item name="fontFamily">@font/lato_bold</item>
  </style>

  <style name="Text.Bold.Body1.White">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="Text.Regular.Body2.Primary">
    <item name="android:textColor">?attr/colorPrimary</item>
  </style>

  <style name="Text.Bold.Body2.Secondary">
    <item name="android:textColor">?attr/colorSecondary</item>
  </style>

  <style name="ShapeAppearanceOverlay.App.rounded" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">@dimen/dp8</item>
  </style>
</resources>